{
  "manifest_version": 3,
  "name": "Badoo Chat Suggestions",
  "version": "1.0.0",
  "description": "Adiciona sugest√µes de texto inteligentes baseadas no contexto da conversa no Badoo",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Chat Suggestions - IA"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://badoo.com/*",
    "https://openrouter.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://badoo.com/messages/*"
      ],
      "js": [
        "src/constants/keywords.js",
        "src/context/message-reader.js",
        "src/context/context-extractor.js",
        "src/core/ai-client.js",
        "src/suggestions/suggestion-engine.js",
        "src/ui/suggestions-ui.js",
        "src/core/chat-controller.js",
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
